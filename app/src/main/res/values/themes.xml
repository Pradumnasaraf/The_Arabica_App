<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheArabica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#964B00</item>
        <item name="colorPrimaryVariant">#654321</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="productPriceView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingTop">6sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="productQuantityView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:text">0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MinusButton">
        <item name="android:layout_width">45sp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:text">-</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="PlusButton">
        <item name="android:layout_width">45sp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:text">+</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Quantity_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">Quantity</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">#A52A2A</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>